<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/iv_user_image_item"
            android:layout_margin="3dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:text="11111111"
            android:textColor="@color/blue"
            android:id="@+id/tv_user_name_item"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/iv_user_image_item"
            android:layout_toEndOf="@+id/iv_user_image_item"/>
        <TextView
            android:id="@+id/tv_time_item"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/tv_user_name_item"
            android:layout_toEndOf="@+id/tv_user_name_item"/>

        <TextView
            android:id="@+id/tv_title_item"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:text="111111111111"
            android:maxWidth="250dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:layout_below="@+id/tv_user_name_item"
            android:layout_alignStart="@+id/iv_user_image_item"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/iv_image_item"
            android:layout_marginRight="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/tv_type_item"
            android:layout_below="@id/tv_title_item"
            android:padding="2dp"
            android:layout_marginTop="-5dp"
            android:text="111"
            android:textSize="10sp"
            android:background="@drawable/type_background"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="18dp"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"/>
    </RelativeLayout>
</LinearLayout>